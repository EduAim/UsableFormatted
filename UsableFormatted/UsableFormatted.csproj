    <PackageIcon>icon-128x128.png</PackageIcon>
    <ApplicationIcon>Images\icon-32x32.ico</ApplicationIcon>
    <IsPublishable>False</IsPublishable>
    <PlatformTarget>x64</PlatformTarget>
